  <body>

   

<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-md-12">
            {{!-- <div class="text-right mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#exampleModalCenter">
                    Add New User
                </button>
            </div> --}}

            <div class="bg-light rounded p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-4" style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 1.2em; margin-bottom: 0;">User List</h6>
                    
                   <a href="/admin/blockeduserlist" class="btn btn-outline-danger m-2">Blocked User List</a> 
                </div>
                <div class="table-responsive">
                    <table class="table w-100">
                        <thead>
                            <tr>
                                {{!-- <th scope="col">ID</th> --}}
                                <th scope="col">SL NO</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Verified</th>
                                
                                <th scope="col">ACTION</th> 
                                

                            </tr>
                        </thead>
                        <tbody>
                            {{#each user}}
                            <tr>
                                {{!-- <th class="align-middle" scope="row">{{_id}}</th> --}}
                                <td class="align-middle">{{serialNumber}}</td>
                                <td class="align-middle">{{name}}</td>
                                <td class="align-middle">{{email}}</td>
                                <td class="align-middle">{{mobile}}</td>
                                {{#if is_verified}}
                                <td class="align-middle">Verified</td>
                                {{else}}
                                <td class="align-middle">Not Verified</td>
                                {{/if}}

                                 <td class="align-middle">
                                    <a href="/admin/edit-user?id={{this._id}}" class="btn btn-primary m-2">Edit</a>
                               
                                    <a href="/admin/block-user?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to Block {{this.name}}?')">Block</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









 

