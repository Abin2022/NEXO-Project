    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script
      src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"
    ></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
  </body>

</html>